{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "skipLibCheck": true, 
    "noImplicitAny": false,
    "paths": {
      "@lib/*": ["./src/lib/*"]
    }
  },
  "include": ["src/**/*"]
}