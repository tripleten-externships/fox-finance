{
  "name": "api",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "build": "pnpm prisma:generate && tsc -p tsconfig.json",
    "prisma:generate": "pnpm --filter @fox-finance/prisma build",
    "prisma:migrate:dev": "pnpm --filter @fox-finance/prisma prisma:migrate:dev",
    "prisma:studio": "pnpm --filter @fox-finance/prisma prisma:studio",
    "start": "node dist/index.js",
    "create:dev-admin": "ts-node -r tsconfig-paths/register scripts/createDevAdminUser.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/s3-presigned-post": "^3.937.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0",
    "@fox-finance/api-types": "workspace:*",
    "@fox-finance/config": "workspace:*",
    "@fox-finance/prisma": "workspace:*",
    "aws": "0.0.3-2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "firebase": "^11.10.0",
    "firebase-admin": "^13.5.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "node-cron": "^4.2.1",
    "tsconfig-paths": "^4.2.0",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.6",
    "@types/connect": "3.4.38",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/express-serve-static-core": "5.1.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^24.5.2",
    "@types/qs": "6.14.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
